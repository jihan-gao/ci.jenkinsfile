String buildShell = "${env.buildShell}"


pipeline{
    agent{
        node{label "master"}
    }

    stages{
        stage("build"){
            steps{
                script{
                    mvnHome = tool "maven"
                    sh "${mvnHome}/bin/mvn ${buildShell}"
                }
            }
        }
        stage("NpmBuild"){
		    steps{
			    script{
				    npmHome = tool "NPM"
					sh "${npmHome}/bin/npm ${buildShell}"
				}
			}
		}
    }
}
